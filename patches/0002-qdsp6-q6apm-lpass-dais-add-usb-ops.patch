+static int q6usb_hw_params(struct snd_pcm_substream *substream,
+			   struct snd_pcm_hw_params *params,
+			   struct snd_soc_dai *dai)
+{
+	struct q6apm_lpass_dai_data *dai_data = dev_get_drvdata(dai->dev);
+	struct snd_soc_pcm_runtime *rtd = substream->private_data;
+	struct audioreach_module_config *cfg = &dai_data->module_config[dai->id];
+	int channels = hw_param_interval_c(params, SNDRV_PCM_HW_PARAM_CHANNELS)->max;
+
+	cfg->bit_width = params_width(params);
+	cfg->sample_rate = params_rate(params);
+	cfg->num_channels = channels;
+	audioreach_set_default_channel_mapping(cfg->channel_map, channels);
+
+	/* USB token format: [31:16]=card_idx [15:8]=pcm_idx [7:0]=direction */
+	if (rtd && rtd->card && rtd->card->snd_card && substream->pcm)
+		cfg->usb_token = (rtd->card->snd_card->number << 16) |
+				 (substream->pcm->device << 8);
+	else
+		cfg->usb_token = 0;
+
+	/* Optional USB service interval override; keep firmware default by default. */
+	cfg->usb_svc_interval = 0;
+
+	return 0;
+}
